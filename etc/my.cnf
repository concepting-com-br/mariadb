[client]
default-character-set=utf8

[mysql]
default-character-set=utf8

[mysqld]
bind-address=0.0.0.0
port=${PORT}
datadir=${DATA_DIR}
log-bin=${LOG_DIR}/${NAME}
collation-server=utf8_unicode_ci
init-connect='SET NAMES utf8'
character-set-server=utf8
max_allowed_packet=1G
max_connections=300
wait_timeout=60000